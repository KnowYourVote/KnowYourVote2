@model IEnumerable<KnowYourVote2.Models.Comment>

@{
    ViewBag.Title = "MarciaFudge";
    Layout = "~/Views/Shared/_LoggedInLayout.cshtml";
}

<link href="~/Content/Comment.css" rel="stylesheet" />

<style type="text/css"></style>
<div class="container">
    <div class="panel panel-danger">
        <div class="panel-heading">
            <h1 class="panel-title">Marcia Fudge</h1>
        </div>
        <div class="panel-body">
            <div class="col-md-6 fudge">
                @*<h2>Marcia Fudge</h2>*@
                <blockquote>
                    <img src="~/Images/MF.jpg" />
                    <p> 4834 Richmond Road, Suite 150</p>
                  <p>Warrensville Heights, OH 44128</p>
                    <p>Office: (216) 522-4900</p>
                </blockquote>
            </div>
            <div class="col-md-6 fudgeInfo">
                <h2>Position: United States House of Representatives OH-11</h2>
                <h3>Party: Democratic</h3>
                <div>
                    <a href="https://fudge.house.gov/"><i class="glyphicon glyphicon-globe" style="font-size: 40px"></i></a>
                    <a href="https://www.facebook.com/RepMarciaLFudge/"><i class="fa fa-facebook-square" style="font-size:50px"></i></a>
                    <a href="https://twitter.com/RepMarciaFudge?ref_src=twsrc%5Egoogle%7Ctwcamp%5Eserp%7Ctwgr%5Eauthor"><i class="fa fa-twitter-square" style="font-size:50px"></i></a>
                    <a href="https://www.linkedin.com/in/marcialfudge/"><i class="fa fa-linkedin-square" style="font-size: 50px"></i></a>
                </div>
                <div class="form-group">
                    <label for="comment">Comment:</label>
                    <textarea class="form-control" rows="5" id="comment"></textarea>
                    <button type="button" class="btn btn-primary">Submit Comment</button>
                </div>
            </div>
        </div> 
    </div>
</div>

<div class="container">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h1 class="panel-title">Comments</h1>
        </div>
        <div class="panel-body">
            <div class="col-md-3">
                <div class="comment-image">
                    <img src="~/Images/sherrod-brown.jpg" />
                    <div>Sherrod</div>
                </div>
            </div>
            <div class="col-md-9 comment-text">
                A very nice candidate, I've met her during a rally and she seems very agreeable. Her support for the middle class is comendable and of great importance. I will definitely vote for her when the next election arrives.
            </div>
        </div>

        <div class="panel-body">
            <div class="col-md-3">
                <div class="comment-image">
                    <img src="~/Images/silhouette.png" />
                    <div>Anonymous</div>
                </div>
            </div>
            <div class="col-md-9 comment-text">
                Very good candidate. Her stance on taxes and security were very well thought out.
            </div>
        </div>
    </div>
</div>
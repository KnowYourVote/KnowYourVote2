@{
    ViewBag.Title = "Home Page";
}

@* 
--User Clicks on Search By Address --> list of current representatives comes in from right side
--On the left side, below the logo, the voter's dates, pole location, and registration link
   populate 
--LogIn and sign up button stay on main page  *@

<div id="main-body" class="row">
    <div class="col-sm-6 search-col absolute-center">
        
        <img src="~/Images/KnowYourVoteOHio.png" />
        <h4>Enter your address. See your politicians. Simple as that</h4>
        <input id="pac-input" class="controls" type="text" placeholder="Enter Your Address Here"><br/>
        <button id="search" class="btn btn-info">See Results</button>
        <div id="election-container"></div>
        <div class="link-container" id="link-container">
            <a href="https://olvr.sos.state.oh.us/">Register To Vote</a>
            <div><a href="http://www.sos.state.oh.us/SOS/elections/Voters/absenteeVoting.aspx#byMail">Absentee & Early Voting </a></div>
            <div id="ballot"></div>
        </div>
    </div>
    <div class="col-sm-6">
        <div id="official-container"></div>
        
        <img style='width:100%;' src="~/Images/Flag_of_Ohio.svg.png" />
    </div>
</div>
@* https://olvr.sos.state.oh.us/ *@
@* http://www.sos.state.oh.us/SOS/elections/Voters/absenteeVoting.aspx *@

<div id="polling-container"></div>


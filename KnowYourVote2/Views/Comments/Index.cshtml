@model IEnumerable<KnowYourVote2.Models.Comment>

@{
    ViewBag.Title = "Index";
}

<link href="~/Content/Comment.css" rel="stylesheet" />

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
    <div class="comment-container">
        @foreach (var item in Model)
        {
            <div class="comment row">
                <div class="comment-image col-md-4">
                    <img src="~/Images/trump.jpg" />
                    <div>Donald J. Trump</div>
                </div>
                <div class="comment-text col-md-8">
                    @Html.DisplayFor(model => item.Comment1)
                </div>
            </div>
        }
    </div>
    <div class="form-group">
        <label for="comment">Comment:</label>
        <textarea class="form-control" rows="5" id="comment"></textarea>
        <button type="button" class="btn btn-primary">Submit Comment</button>
    </div>
